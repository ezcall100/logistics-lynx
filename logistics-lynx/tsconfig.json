{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    /* Language & Environment */
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",

    /* Paths & Aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    /* Type Checking */
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noUnusedParameters": false,
    "noUnusedLocals": false,

    /* Compilation Options */
    "allowJs": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "module": "ESNext"
  }
}

