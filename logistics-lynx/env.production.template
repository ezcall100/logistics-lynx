# =======================================
# ✅ MCP CONFIGURATION
# =======================================
NEXT_PUBLIC_MCP_API_URL=https://mcp.transbotai.com/api
MCP_API_KEY=your-prod-mcp-api-key
MCP_PROJECT_ID=your-prod-mcp-project-id

# =======================================
# ✅ FRONTEND METADATA
# =======================================
NEXT_PUBLIC_APP_NAME=TransBot AI
NEXT_PUBLIC_BASE_URL=https://transbotai.com

# =======================================
# ✅ AUTHENTICATION & COOKIES
# =======================================
AUTH_SECRET=your-prod-secret
COOKIE_DOMAIN=transbotai.com

# =======================================
# ✅ SUPABASE BACKEND
# =======================================
SUPABASE_URL=https://yourproject.supabase.co
SUPABASE_ANON_KEY=your-prod-anon-key
SUPABASE_SERVICE_KEY=your-prod-service-key

# =======================================
# ✅ EMAIL SMTP SERVER
# =======================================
SMTP_HOST=smtp.transbotai.com
SMTP_PORT=587
SMTP_USER=no-reply@transbotai.com
SMTP_PASS=your-prod-password

# =======================================
# ✅ OPTIONAL: ANALYTICS + MONITORING
# =======================================
SENTRY_DSN=
GOOGLE_ANALYTICS_ID=

# =======================================
# ✅ PROXY + RATE LIMITING CONFIG
# =======================================
TRUST_PROXY=true
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60

# =======================================
# ✅ SECURITY HEADERS (NGINX & CSP)
# =======================================
CSP_DIRECTIVES=default-src 'self'; script-src 'self' https://transbotai.com; style-src 'self' 'unsafe-inline'; img-src * data:;
